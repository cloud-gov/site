---
import Markdown from "./Markdown.astro";

interface Link {
  label: string;
  url: string;
}

interface Item {
  icon?: string;
  heading?: string;
  text?: string;
  link?: Link;
}

interface Props {
  heading?: string;
  intro?: string;
  outro?: string;
  items?: Item[];
}

const { heading, intro, outro, items = [] } = Astro.props;
---

<section class="usa-section">
  <div class="grid-container">
    <div class="grid-row">
      <div class="grid-col-12 tablet:grid-col-10 desktop-lg:grid-col-12 margin-x-auto">
        {heading && <h2 class="font-sans-xl margin-bottom-2">{heading}</h2>}

        {intro && <Markdown content={intro} classes="font-sans-lg line-height-sans-3 margin-bottom-5" inline />}
      </div>
    </div>

    <div class="grid-col-12 tablet:grid-col-10 desktop-lg:grid-col-12 margin-x-auto">
      <div class="grid-row grid-gap-lg flex-justify">
        {
          items.map((item) => (
            <div class="grid-col-12 tablet-lg:grid-col-6 display-flex flex-row padding-bottom-3">
              {item.icon && (
                <div class="width-4 margin-right-2">
                  <svg class="usa-icon usa-icon--size-4" role="img" aria-hidden="true">
                    <use href={`${Astro.site}/assets/uswds/img/sprite.svg#${item.icon}`} />
                  </svg>
                </div>
              )}

              <div class="display-flex flex-column height-full padding-right-2">
                {item.heading && <h3 class="font-body-md margin-bottom-05 margin-top-1 minh-3">{item.heading}</h3>}

                {item.text && (
                  <Markdown
                    content={item.text}
                    classes="font-body-sm line-height-body-3 margin-top-05 margin-bottom-0 minh-4"
                    inline
                  />
                )}

                {item.link && (
                  <p class="font-body-xs line-height-body-3 margin-top-1 margin-bottom-0">
                    <a class="usa-link" href={item.link.url}>
                      {item.link.label}
                    </a>
                  </p>
                )}
              </div>
            </div>
          ))
        }
      </div>

      {
        outro && (
          <Markdown content={outro} classes="margin-top-05 font-sans-md line-height-sans-5 margin-bottom-0" inline />
        )
      }
    </div>
  </div>
</section>
