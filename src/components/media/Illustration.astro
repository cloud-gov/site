---
import { Image } from "astro:assets";

interface Props {
  name: string;
}

const { name } = Astro.props;
const slug = name.split("Illustration-")[1];
---

<div class="illustration-container">
  <Image class="illustration-image" src={import(`./../../assets/illustrations/${slug}.svg`)} alt={name} />
</div>

<style lang="scss">
  .illustration-container {
    height: 50vw;
    @media (min-width: 1024px) {
      height: 26rem;
    }
  }
  .illustration-image {
    height: 100%;
    max-width: 80%;
    @media (min-width: 1024px) {
      height: 30rem;
      max-width: 80%;
      position: relative;
      top: -2rem;
    }
  }
</style>
