---
const {
  titlePlaceholder = "Cloud.gov",
  descriptionPlaceholder = "This is going to be a great website",
  imagePlaceholder = Astro.site + "/favicon.ico",
  siteUrlPlaceholder = Astro.site,
  ...props
} = Astro.props;
// TODO: Check all these placeholders and replace
---

<link rel="icon" type="image/svg+xml" href={`${Astro.site}favicon.ico`} />
<meta name="generator" content={Astro.generator} />
<title>{titlePlaceholder}</title>

<link rel="sitemap" href="/sitemap.xml" />
<link rel="canonical" href={siteUrlPlaceholder} />

<title>{titlePlaceholder}</title>
<meta name="description" content={descriptionPlaceholder} />

<!-- Web analytics -->

<!-- Open Graph tags -->
<meta property="og:title" content={titlePlaceholder} />
<meta property="og:type" content="website" />
<meta property="og:url" content={siteUrlPlaceholder} />
<meta property="og:description" content={descriptionPlaceholder} />
<meta property="og:image" content={imagePlaceholder} />
<meta property="og:image:alt" content="" />

<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content={titlePlaceholder} />
<meta name="twitter:description" content={descriptionPlaceholder} />

<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="HandheldFriendly" content="True" />
<meta name="MobileOptimized" content="320" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<script
  type="application/javascript"
  id="_fed_an_ua_tag"
  src="https://dap.digitalgov.gov/Universal-Federated-Analytics-Min.js?agency=GSA&subagency=TTS"></script>

<script>
  var usasearch_config = { siteHandle: "cloud.gov" };
</script>
<script async src="https://search.usa.gov/javascripts/remote.loader.js" type="text/javascript"></script>
