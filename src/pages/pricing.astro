---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Topics from "../components/Topics.astro";
import CTA from "../components/CTA.astro";
import PageSection from "../components/PageSection.astro";
import Pricing from "../components/Pricing.astro";
import Tiles from "../components/Tiles.astro";
import Steps from "../components/Steps.astro";
import Subscribe from "../components/Subscribe.astro";

import content from "../data/pages/pricing.yaml";
import { siteProps } from "../data/site";
---

<Layout>
  <Hero {...content.headerSection} />
  <Tiles {...content.g2g} />
  <PageSection {...content.noRFP} />
  <Pricing {...content.pricingContent} />
  <Steps {...content.stepsList} />
  <CTA {...siteProps.freeSandbox} />
  <Topics {...content.ourApproach} />
  <Tiles {...content.supportTiles} />
  <Subscribe {...siteProps.newsletter} />
</Layout>
