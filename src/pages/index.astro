---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Topics from "../components/Topics.astro";
import Markdown from "../components/Markdown.astro";
import PageSection from "../components/PageSection.astro";
import Tiles from "../components/Tiles.astro";
import CTA from "../components/CTA.astro";
import Steps from "../components/Steps.astro";
import Subscribe from "../components/Subscribe.astro";

import content from "../data/pages/home.yaml";
---

<Layout>
  <Hero {...content.headerSection} />
  <Tiles {...content.g2g} />
  <Steps {...content.getCoding} />
  <CTA {...content.CTASection} />
  <Steps {...content.stepsList} />
  <hr />
  <PageSection {...content.mandatesHandled}>
    <Markdown
      content={content.mandatesHandled.content}
      classes="font-body-lg margin-top-neg-2 margin-bottom-2 desktop-lg:margin-left-neg-2 line-height-sans-4"
    />
  </PageSection>
  <Tiles {...content.supportTiles} />
  <Topics {...content.ourApproach} />
  <hr />
  <Subscribe {...content.newsletter} />
</Layout>
