---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Topics from "../components/Topics.astro";
import PageSection from "../components/PageSection.astro";
import Tiles from "../components/Tiles.astro";
import CTA from "../components/CTA.astro";
import Steps from "../components/Steps.astro";
import Subscribe from "../components/Subscribe.astro";

import content from "../data/pages/home.yaml";
import sitewide from "../data/sitewide.yaml";

const ourApproach = {
  ...sitewide.ourApproach,
  items: sitewide.ourApproach.items.filter((item) => content.approachIds.includes(item.id)),
};
---

<Layout title={content.title} description={content.description}>
  <Hero {...content.headerSection} />
  <Tiles {...content.g2g} />
  <Steps {...content.getCoding} />
  <CTA {...sitewide.freeSandbox} />
  <Steps {...content.stepsList} />
  <hr />
  <PageSection {...content.mandatesHandled} />
  <Tiles {...sitewide.supportTiles} />
  <Topics {...ourApproach} />
  <hr />
  <Subscribe {...sitewide.newsletter} />
</Layout>
