---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Topics from "../components/Topics.astro";
import Tiles from "../components/Tiles.astro";
import Steps from "../components/Steps.astro";
import Subscribe from "../components/Subscribe.astro";
import CTA from "../components/CTA.astro";
import MediaSection from "../components/MediaSection.astro";

import content from "../data/pages/security.yaml";
import sitewide from "../data/sitewide.yaml";

const ourApproach = {
  ...sitewide.ourApproach,
  items: sitewide.ourApproach.items.filter((item) => content.approachIds.includes(item.id)),
};
---

<Layout title={content.title} description={content.description}>
  <Hero {...content.hero} />
  <Tiles {...content.g2g} />
  <Steps {...content.launchNow} />
  <MediaSection {...content.AtoMedia} />
  <Tiles {...content.yourMissionOurInfra} />
  <CTA {...sitewide.freeSandbox} />
  <Topics {...ourApproach} />
  <Tiles {...sitewide.supportTiles} />
  <Subscribe {...sitewide.newsletter} />
</Layout>
